extends layout

block register


	nav.navbar.navbar-inverse.navbar-fixed-top
			.container-fluid
				.col-sm-6.col-xs-3.banner
					a(href='/')
						img.dcrosters(style="min-width: 100px" src="images/logo-200x200-cup.png")
						img.dclogo( style="min-width: 150px" src="images/logo-roast3.png")
				.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
							span.sr-only Toggle navigation						
							span.icon-bar						
							span.icon-bar						 
							span.icon-bar

					#bs-example-navbar-collapse-1.collapse.navbar-collapse
						.col-sm-6.col-xs-12
							a(href="/login")
								button.btn.btn-primary.sign-up-btn.btn-top(type="submit") Login
							a(href="/login")
								button.btn.login-btn.btn-top.login-text(type="submit") Already have an account?

	.register-wrapper
		.container.col-lg-6.col-lg-offset-3.col-sm-7.col-sm-offset-3.col-xs-12
				.row
					h1.text-center Registration								 
					p.lead.text-center Pick a username and password
				.row
					if(failure)
						h2.fail You must enter the same password in both fields!
					//- if(failuser)
					//- 	h2.fail Sorry this user account is taken!
					form#registration(action='/register', method='post', name='Registration', role='form')
						.form-group
							label Username:
							input.form-control(name='username', placeholder='Rob Digital', type='text' minlength="5")
						.form-group
							label Password:
							input.form-control(name='password', placeholder='6 Character Minimum', type='password' minlength="6")
						.form-group
							input.form-control(name='password2', placeholder='Confirm Password', type='password')
						.form-group
							label Email:
							input.form-control(name='email', placeholder='digitalroast@email.com', type='email')
							.button-holder.text-center
								button.btn.btn-register.center-block(type='submit') Register
								&nbsp;
								a(href='/')
									button.btn.btn-cancel.center-block(type='button') nevermind